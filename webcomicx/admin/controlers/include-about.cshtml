@using System.Xml.Linq
@using System.Xml
@{
    if(IsPost){
        var include = true;
        include = Request["about"].AsBool();
        string filename = "/App_Data/WebcomicX.xml";
        var load = new Comic();
        var settings = load.LoadComic(filename);
        settings.Descendants("AboutPage").ElementAt(0).Value.AsBool()=include.ToString();
        settings.Save(Server.MapPath(filename));
    }
}