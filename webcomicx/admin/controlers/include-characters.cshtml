@using System.Xml.Linq
@using System.Xml
@{
    if(IsPost){//include or don't include characters page for webcomic
        var include = true;
        include = Request["characters"].AsBool();
        string filename = "~/App_Data/WebcomicX.xml";

        var load = new Comic();
        var settings = load.LoadComic(filename);

        settings.Descendants("CharactersPage").ElementAt(0).Value = include.ToString();

        //save settings
        settings.Save(Server.MapPath(filename));
    }
}